<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.AlbumDisplayController">
   <children>
      <ButtonBar layoutY="539.0" prefHeight="67.0" prefWidth="900.0">
        <buttons>
          <Button fx:id="addNewAlbumButton" mnemonicParsing="false" onAction="#addNewAlbumButton" prefHeight="35.0" prefWidth="502.0" text="Add New Album">
               <font>
                  <Font size="14.0" />
               </font></Button>
            <Button fx:id="openAlbumButton" mnemonicParsing="false" onAction="#openAlbumButton" prefHeight="35.0" text="Open Album">
               <font>
                  <Font size="14.0" />
               </font></Button>
            <Button fx:id="renameAlbumButton" mnemonicParsing="false" onAction="#renameAlbumButton" prefHeight="35.0" text="Rename Album">
               <font>
                  <Font size="14.0" />
               </font></Button>
            <Button fx:id="deleteAlbumButton" mnemonicParsing="false" onAction="#deleteAlbumButton" prefHeight="35.0" text="Delete Album">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
        </buttons>
         <padding>
            <Insets right="20.0" />
         </padding>
      </ButtonBar>
      <ToolBar prefHeight="50.0" prefWidth="900.0" AnchorPane.leftAnchor="0.0">
         <items>
            <TextField fx:id="searchBar" prefHeight="25.0" prefWidth="319.0" promptText="Search Box" />
            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchButton" prefHeight="25.0" prefWidth="78.0" text="Search" />
            <RadioButton fx:id="tagRadioButton" mnemonicParsing="false" text="Tag" />
            <RadioButton fx:id="dateRadioButton" mnemonicParsing="false" text="Date" />
            <Label prefHeight="17.0" prefWidth="278.0" />
            <Button fx:id="logOutButton" mnemonicParsing="false" onAction="#logOutButton" prefHeight="25.0" prefWidth="92.0" text="Log Out" />
         </items>
         <padding>
            <Insets left="20.0" />
         </padding>
      </ToolBar>
      <ListView fx:id="listView" layoutX="21.0" layoutY="109.0" prefHeight="424.0" prefWidth="857.0" />
      <Label layoutX="25.0" layoutY="62.0" prefHeight="35.0" prefWidth="183.0" text="Albums:">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
